<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">
    <!-- Enable features -->
    <featureManager>
         <!--<feature>jaxrs-2.0</feature>
         <feature>managedBeans-1.0</feature>
         <feature>cdi-1.2</feature>-->
         <feature>microProfile-1.0</feature>
    </featureManager>

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080"
                  httpsPort="9493" >
        <tcpOptions soReuseAddr="true"/> 
		<httpOptions maxKeepAliveRequests="-1"/>
	</httpEndpoint>

    <webApplication name="bookingservice"
        location="bookingservice-java-2.0.0-SNAPSHOT.war"
        contextRoot="/" />   
    <webContainer deferServletLoad="false"/>
    <jndiEntry jndiName="com/acmeair/repository/type" value="mongo"/>
    <!--logging traceSpecification="*=audit:com.acmeair.*=finest"/-->
    
    <executor name="LargeThreadPool" id="default" coreThreads="10" maxThreads="10" />
</server>
